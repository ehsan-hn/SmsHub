# ==========================
# Django
# ==========================
DJANGO_SECRET_KEY=replace-me
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==========================
# Postgres (db)
# docker-compose uses DB_NAME, DB_USER, DB_PASSWORD
# ==========================
DB_NAME=smshub
DB_USER=smshub
DB_PASSWORD=smshub

# Optional for Django settings
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ==========================
# Redis
# ==========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/1

# ==========================
# RabbitMQ
# docker-compose uses RABBITMQ_USER, RABBITMQ_PASSWORD, RABBITMQ_VHOST
# ==========================
RABBITMQ_USER=smshub
RABBITMQ_PASSWORD=smshub
RABBITMQ_VHOST=/

# Celery broker (Flower uses this)
CELERY_BROKER_URL=amqp://smshub:smshub@rabbitmq:5672//

# ==========================
# Celery / Flower
# ==========================
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# Celery result backend (Redis)
CELERY_RESULT_BACKEND=redis://redis:6379/1
